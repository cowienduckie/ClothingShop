@model ClothingShop.Entity.Models.ProductDetailModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";

}
<br />
<div class="row">
    <div class="col-md-6 justify-content-center">
        <!--Image Slider-->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content(Model.Image)" class="d-block w-100" alt="@Model.Name">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content(Model.Image)" class="d-block w-100" alt="@Model.Name">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content(Model.Image)" class="d-block w-100" alt="@Model.Name">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-6">
        <h2><strong>@Html.DisplayFor(m => m.Name)</strong></h2>
        <h4>@Html.DisplayFor(m => m.Price)</h4>
        <hr />
        <h5><strong>Màu sắc</strong></h5>
        <br />
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-2">
                    <button class="btn btn-outline-dark btn-circle btn-lg" style="background-color: @item.ColorHexCode"> </button>
                </div>
            }
        </div>
        <br />
        <h5><strong>Kích cỡ</strong></h5>
        <br />
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-2">
                    <button class="btn btn-block btn-outline-dark">@item.SizeValue</button>
                </div>
            }
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-sm-6">
                <button class="btn btn-success btn-block">Thêm vào giỏ hàng</button>
            </div>
            <div class="col-sm-6">
                <button class="btn btn-danger btn-block">Mua ngay</button>
            </div>
        </div>
        <hr />
        <div>
            <h5><strong>Mô tả</strong></h5>
            <h6 class="text-justify">@Html.DisplayFor(model => model.Description)</h6>
        </div>
    </div>
</div>

