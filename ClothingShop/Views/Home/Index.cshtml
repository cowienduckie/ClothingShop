@{
    ViewData["Title"] = "Trang chủ";
    var Categories = ViewBag.Categories;
    var HotItems = ViewBag.HotItems.ItemList;
    var NewItems = ViewBag.NewItems.ItemList;
}

<br/>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/assets/banners/1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/assets/banners/2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/assets/banners/3.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/assets/banners/5.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br/>
<div class="m-5">
    <h4><strong>DANH MỤC SẢN PHẨM</strong></h4>
    <hr/>
    <div class="row card-deck">
        @foreach (var category in Categories)
        {
            if (category.CategoryId == 19 || category.CategoryId == 20) continue;
            <div class="col-2">
                <a asp-action="Index"
                   asp-controller="Product"
                   asp-route-category="@category.CategoryId">
                    <div class="card bg-light text-dark">
                        <div class="card-body">
                            <h5 class="card-text text-center"><strong>@category.Name</strong></h5>
                        </div>
                    </div>
                </a>
            </div>
        }
        <div class="col-2">
            <a asp-action="Index"
               asp-controller="Product">
                <div class="card bg-light text-dark">
                    <div class="card-body">
                        <h5 class="card-text text-center"><strong>Toàn bộ sản phẩm</strong></h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
@if (NewItems != null && NewItems.Count != 0)
{
    <div class="m-5">
        <h4><strong>SẢN PHẨM MỚI</strong></h4>
        <hr/>
        <div class="row card-deck">
            @foreach (var item in NewItems)
            {
                <div class="col-md-2" style="margin-top: 15px; margin-bottom: 15px">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId">
                            <img src="@Url.Content(item.Image)" class="card-img-top border-bottom" alt="@item.Name" style="margin: auto">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><strong>@item.Name</strong></h5>
                            <h7 class="card-text">@String.Format("{0:#,#VND;;0VND}", item.Price)</h7>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (HotItems != null && HotItems.Count != 0)
{
    <div class="m-5">
        <h4><strong>SẢN PHẨM BÁN CHẠY</strong></h4>
        <hr/>
        <div class="row card-deck">
            @foreach (var item in HotItems)
            {
                <div class="col-md-2" style="margin-top: 15px; margin-bottom: 15px">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId">
                            <img src="@Url.Content(item.Image)" class="card-img-top border-bottom" alt="@item.Name" style="margin: auto">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><strong>@item.Name</strong></h5>
                            <h7 class="card-text">@String.Format("{0:#,#VND;;0VND}", item.Price)</h7>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

